.feature-item{
  position: relative;

  @mixin atSmall{
    padding-left: 94px;
  }

  padding-bottom: 2.5rem;
  &-icon{
    display: block;
    margin: 0 auto;
    @mixin atSmall{
      position: absolute;
      left: 0;
    }
  }

  &-title{
    font-weight: 300;
    margin-bottom: .8rem;
    font-size: 1.6rem;
    margin-top: .7rem;
    text-align: center;
    @mixin atSmall{
      font-size: 1.875rem;
      margin-top: 1rem;
      text-align: left;
    }
  }
}